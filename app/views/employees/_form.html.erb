<div class="employee_form">
  <% if employee.errors.present? %>
    <div class="alert alert-danger">
      <ul>
        <% employee.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with model: employee, local: true do |f| %>
    <div class="form_group row mt-3">
      <%= f.label :number, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= f.text_field :number, class: "form-control" %>
      </div>
    </div>

    <div class="form_group row mt-3">
      <%= f.label :last_name, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>
    <div class="form_group row mt-3">
      <%= f.label :first_name, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>

    <div class="form_group row mt-3">
      <%= f.label :account, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= f.text_field :account, class: "form-control" %>
      </div>
    </div>

    <div class="form_group row mt-3">
      <%= f.label :password, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>

    <div class="form_group row mt-3">
      <%= f.label :email, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form_group row mt-3">
      <%= f.label :date_of_joining, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= f.date_field :date_of_joining, class: "form-control" %>
      </div>
    </div>

    <div class="form_group row mt-3">
      <%= f.label :department_id, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= f.collection_select(:department_id, @departments, :id, :name, {prompt: ""}, {class: "form-control"}) %>
      </div>
    </div>

    <div class="form_group row mt-3">
      <%= f.label :office_id, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= f.collection_select(:office_id, @offices, :id, :name, {prompt: ""}, {class: "form-control"})%>
      </div>
    </div>

    <div class="row justify-content-end mt-3">
      <div class="form-check col-auto">
        <%= f.label :employee_info_manage_auth, class: 'form-check-label' %>
        <%= f.check_box :employee_info_manage_auth, :as => :boolean, class: "form-check-input" %>
      </div>

      <div class="form-check col-auto">
        <%= f.label :news_posting_auth, class: 'form-check-label' %>
        <%= f.check_box :news_posting_auth, :as => :boolean, class: "form-check-input" %>
      </div>
    </div>
    <%= f.submit '保存', class: "btn btn-primary mt-2" %>
  <% end %>
</div>
