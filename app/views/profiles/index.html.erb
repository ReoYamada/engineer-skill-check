<div class="profile_space">
  <%= link_to '一覧に戻る', employees_path, class: 'btn btn-primary mt-3' %>

  <%= render partial: 'employee_info', locals: { employee: @employee } %>

  <div class="mt-3">
    <p class="fw-bold">プロフィール</p>
    <p class="profile_value">
      <% if current_user == @employee %>
        <%= link_to 'プロフィールを作成', new_employee_profile_path(@employee) %>
      <% else %>
        （プロフィールがありません）
      <% end %>
    </p>
  </div>
</div>
