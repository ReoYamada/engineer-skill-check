<div class="article_form">
  <% if article.errors.present? %>
    <div class="alert alert-danger">
      <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with model: article, local: true do |f| %>
    <%= f.hidden_field :author, :value => current_user.id %>
    <div class="form_group mb-3 mt-3">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form_group">
      <%= f.text_area :content, class: "form-control", rows: 10, placeholder: "内容を入力してください" %>
    </div>
    <%= f.submit '投稿', class: "btn btn-primary mt-2" %>
  <% end %>
</div>
