<div class="article_index">
  <% if flash.notice.present? %>
    <p><%= flash.notice %></p>
  <% end %>
  <% if current_user.news_posting_auth %>
    <p><%= link_to '新規投稿', new_article_path %></p>
  <% end %>
  <table class="article_table">
    <thead>
      <tr>
        <th>タイトル</th>
        <th>投稿日</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <th><%= link_to article.title, article_path(article) %></th>
          <th><%= article.created_at.to_s(:datetime_jp) %></th>
          <% if current_user.id == article.author %>
            <th><%= link_to '編集', edit_article_path(article) %></th>
            <th><%= link_to '削除', article_path(article), method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %></th>
          <% end %>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>
